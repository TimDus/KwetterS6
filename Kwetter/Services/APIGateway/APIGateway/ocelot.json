{
  "Routes": [
    //Kweet
    {
      "UpstreamPathTemplate": "/api/Kweet",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "kweetapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Kweet",
      "SwaggerKey": "kweet"
    },

    //Customer
    {
      "UpstreamPathTemplate": "/api/Customer",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "customerapi",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Customer",
      "SwaggerKey": "customer"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "kweet",
      "Config": [
        {
          "Name": "Kweet API",
          "Version": "v1",
          "Url": "http://localhost:5100/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "customer",
      "Config": [
        {
          "Name": "Orders API",
          "Version": "v1",
          "Url": "http://localhost:5200/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  //Global config
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:800"
  }
}
